      body(ng-app="login")
            div(layout="row" layout-align="center center" ng-controller="LoginCtrl")

                  div(style="width: 450px; margin-top: 58px;")
                        div.inside(md-whiteframe="5" style="width: 100%" )            
                              md-toolbar
                                    div.md-toolbar-tools
                                          h1 
                                                span(style="color: #fff;") P
                                                span(style="color: #333;") !
                                                span(style="color: #fff;")=" Authentication"
                              md-content(layout="column" layout-padding)
                                    form(action="/login/" method="post")                                        
                                          md-input-container.md-block.flex-gt-sm
                                                label(for="username") Login
                                                input(required="required" autocorrect="off" autocapitalize="none" id="username" name="username" type="text")
                                          md-input-container.md-block.flex-gt-sm
                                                label(for="password") Password
                                                input(required="required" id="password" name="password" type="password")
                                          div(style="float: right")
                                                md-button.md-raised.md-primary(type="submit" aria-label="Login") Login

            
